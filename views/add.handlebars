<form action="/new_restaurant_form" method="post">
  <label for="disabledTextInput" class="form-label">餐廳名稱</label>
  <input class="form-control" type="text" name="name" placeholder="輸入餐廳名稱" required="required" style="display: block;">
  <label for="disabledTextInput" class="form-label">餐廳英文名稱（非必填）</label>
  <input class="form-control" type="text" name="name_en" placeholder="輸入英文名稱（非必填）" style="display: block;">
  <label for="disabledTextInput" class="form-label">餐廳類型</label>
  <input class="form-control" type="text" name="category" placeholder="輸入餐廳類型" required="required"
    style="display: block;">
  <label for="disabledTextInput" class="form-label">餐廳或餐點圖片（非必填）</label>
  <input class="form-control" type="text" name="image" placeholder="餐廳圖片網址（非必填）" style="display: block;">
  <label for="disabledTextInput" class="form-label">餐廳地址</label>
  <input class="form-control" type="text" name="location" placeholder="輸入餐廳地址" required="required"
    style="display: block;">
  <label for="disabledTextInput" class="form-label">餐廳電話</label>
  <input class="form-control" type="text" name="phone" placeholder="輸入餐廳電話" required="required" style="display: block;">
  <label for="disabledTextInput" class="form-label">Google地圖網址（非必填）</label>
  <input class="form-control" type="text" name="google_map" placeholder="Google地圖網址（非必填）" style="display: block;">
  <label for="disabledTextInput" class="form-label">餐廳評分</label>
  <input class="form-control" type="number" min="0" max="5" name="rating" placeholder="輸入餐廳評分" required="required"
    style="display: block;">
  <label for="disabledTextInput" class="form-label">餐廳相關描述</label>
  <input class="form-control" type="text" name="description" placeholder="輸入餐廳相關描述" required="required"
    style="display: block;">
  <button type="submit">編輯完畢</button>
</form>